<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    app:cardCornerRadius="2dp"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_med"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/holder_receive">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_receive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:contentDescription="@string/image_receive"
            android:layout_margin="@dimen/margin_small"
            android:src="@drawable/ic_cake_accent_48dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/name_receive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="Omelete"
                android:textColor="@color/hitam"
                android:textAllCaps="true"
                android:textSize="@dimen/textview_title"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
